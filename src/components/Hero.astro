<section class="relative min-h-screen flex items-center py-20 bg-primary-700 overflow-hidden">
  <!-- Background pattern/gradient -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-800 to-primary-600"></div>
    <div class="absolute inset-0 opacity-10">
      <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
        <defs>
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>
  </div>
  
  <div class="container mx-auto px-4 relative z-1">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="text-white">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-heading leading-tight mb-6 animate-fadeIn">
          Servis Rekabentuk <br/><span class="text-primary-300">Website Profesional</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-100 animate-fadeIn animation-delay-200">
          Hanya RM350 Sahaja â€“ Bayar Selepas Siap, 100% Tanpa Risiko!
        </p>
        <div class="animate-fadeIn animation-delay-400">
          <a href="#contact" class="inline-block bg-white text-primary-700 font-bold py-3 px-8 rounded-full text-lg shadow-lg hover:bg-gray-100 transition-all duration-300 hover:scale-105 transform">
            Tempah Sekarang
          </a>
        </div>
      </div>
      
      <div class="hidden md:block relative animate-fadeIn animation-delay-600">
        <img 
          src="img/servis-buat-website.PNG" 
          alt="Laptop dengan skrin website" 
          class="rounded-lg shadow-2xl transform rotate-1 hover:rotate-0 transition-transform duration-500"
        />
        <div class="absolute -bottom-10 -left-10 bg-white rounded-lg p-4 shadow-lg transform rotate-3 hover:rotate-0 transition-transform duration-500">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <p class="font-bold text-primary-700">Siap 3-5 Hari</p>
          </div>
        </div>
        <div class="absolute -top-8 -right-8 bg-white rounded-lg p-4 shadow-lg transform -rotate-2 hover:rotate-0 transition-transform duration-500">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
            <p class="font-bold text-primary-700">RM350 Sahaja</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-0 left-0 w-full overflow-hidden">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-16 md:h-24">
